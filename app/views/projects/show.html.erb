<% provide(:title, @project.title) %>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
    		<div class="col-md-7">
					<%= image_tag @project.main_image.to_s, class:"img-fluid"%>
				</div>

				<div class="col-md-5">
					<h1><%= @project.title %></h1>
					<em><%= @project.subtitle %></em>
					<%= @project.body %>
					<h3>Technologies Used:</h3>
					<% @project.technologies.each do |t| %>
						<p><%= t.name %></p>
					<% end %>
				</div>
		</div>
  </div>
</div>