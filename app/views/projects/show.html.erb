<% provide(:title, @project.title) %>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
    		<div class="col-md-7">
					<%= image_tag project_img(@project.main_image, 'main'), class:"img-fluid"%>
				</div>

				<div class="col-md-5">
					<h1><%= @project.title %></h1>
					<em><%= @project.subtitle %></em>
					<%= @project.body %>
					<h3>Technologies Used:</h3>
					<% @project.technologies.each do |t| %>
						<p><%= t.name %></p>
					<% end %>

          <% if logged_in?(:site_admin) %>
            <div>
              <%= link_to "Edit Item", edit_project_path(@project), class: 'btn btn-warning' %>
            </div>
          <% end %>
				</div>
		</div>
  </div>
</div>